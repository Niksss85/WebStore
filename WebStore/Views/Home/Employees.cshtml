@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WebStore.Models.Employee>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
</head>
<body>

    <h3>Employess</h3>

    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Patronomyc</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td><a asp-controller="Home" asp-action="Employee" asp-route-id="@employee.Id">@employee.Id</a></td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <a href="~/">Home</a>

</body>
</html>

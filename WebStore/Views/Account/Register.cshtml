@model RegisterUserViewModel
@{
    ViewData["Title"] = "Registration of new user";
}

<h1>Register</h1>

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <!--спец. код, который загружается в браузер при загрузке html страницы и при отправке
    формы отправляется серверу и сервер проверяет что тот код, который был отправлен такая же как и полученнная-->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="Login" />
                        <span asp-validation-for="UserName"></span>

                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password"></span>

                        <input asp-for="PasswordConfirm" placeholder="PasswordConfirm" />
                        <span asp-validation-for="PasswordConfirm"></span>

                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->